    <div class="content">
      <fieldset>
        <form id="form" method="post">
          <input type="text" name="city" class="city-input" placeholder="Enter your city name" required>
          <input type="submit" class="city-submit" value="Find">
        </form>

          <!-- Upon fetching of data you will display it -->
          <%if( weather !== null){ %>
                  <div class="header">
                    <span class="title"><%= place %></span><br>
                    <span class="sub-title"><%= timezone %></span>
                  </div><br>
                  <div class="content">
                    <div class="section-1">
                      <span class="content-title">Temperature</span><br>
                      <span class="content-text"><%= temp %>°C / <%= fahrenheit %>°F</span>
                      <br><br>
                      <span class="content-title">Main</span><br>
                      <span class="content-text"><%= main %></span>
                    </div>
                    <div class="section-2">
                      <span class="content-header">Description</span>
                      <br><br>
                      <span class="content-title">Ovarall Description: </span><br>
                      <span class="content-text"><%= description %></span>
                      <br><br>
                      <span class="content-title">Cloud Coverage: </span><br>
                      <span class="content-text"><%= clouds %>%</span>
                      <br><br>
                      <span class="content-title">Visibility: </span>
                      <span class="content-text"><%= visibility %> meters</span>
                    </div>
                    <div class="section-3">
                      <span class="content-header">Other Information</span>
                      <br><br>
                      <span class="content-title">Humidity</span><br>
                      <span class="content-text"><%= humidity %> g.m-3</span>
                      <br><br>
                      <span class="content-title">Pressure: </span>
                      <span class="content-text"><%= pressure %> N·m−2</span>
                    </div>
                  </div>
              
          <% } %>
              <% if(error !== null){ %>
              <p>
                <%= error %>
              </p>
          <% } %>
        </fieldset>
